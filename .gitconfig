[alias]
	st = status
	ch = checkout
	che = checkout
	cp = cheery-pick
	co = commit
	head = !git r -1
	h = !git head
	hp = "!. ~/.githelpers && show_git_head"
	r = !GIT_NO_PAGER=1 git l -30
	ra = !git r --all
	l = "!. ~/.githelpers && pretty_git_log"
	la = !git l --all
	d = difftool
    vhr = !git fetch && git reset --hard FETCH_HEAD
