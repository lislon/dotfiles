[core]
	autocrlf = false
	excludesfiles = ~/dotfiles/.gitignore_global
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
[diff]
	;external = ~/dotfiles/bin/git_diff_wrapper
[merge]
	tool = vimdiff
[difftool]
	promt = false
	prompt = false
[pager]
