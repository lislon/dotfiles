# -*- mode: snippet -*-
# name: parseargs
# key: parseargs
# --

function parseargs {
  # >1 when all args have values
  # >0 when some args don't ave values
  while [[ $# > 1 ]] ; do
  key="\$1"

  case $key in
      -e|--extension)
      EXTENSION="\$2"
      shift
      ;;
      --single)
      SINGLE=YES
      ;;
      *)
      # unknown option
      ;;
  esac
  shift # past argument or value
  done
}

parseargs "$@"